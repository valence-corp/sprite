<div id="searchResults" class="hidden highlight-shadow">
  <header class="flex col">
    <div id="searchBox" class="center-items">
      <input class="button-reset highlight-shadow" type="search" id="searchInput" aria-label="Search" />
      <label for="searchInput" id="searchLabel">search</label>
      {%
      include button/button.liquid
      icon="icons/close.svg"
      title="Close Search Dialog"
      id="close_search_dialog"
      class="foreground-red"
      %}
    </div>
    <div class="big-icon padding-h-section padding-v-2 flex row bottom-border content-center-v">
      <span class="padding-h-3">
        {% include icons/filter.svg %}
      </span>
      <div class="toggleButtonGroup padding-h-section" id="searchFilters">
        <input type="checkbox" id="toggleClassResults" value="class" checked /><label for="toggleClassResults"
          class="button content-center-v padding-3">Classes</label>
        <input type="checkbox" id="toggleMethodResults" value="method" checked /><label for="toggleMethodResults"
          class="button content-center-v padding-3">Methods</label>
        <input type="checkbox" id="toggleTypeResults" value="type" checked /><label for="toggleTypeResults"
          class="button content-center-v padding-3">Types</label>
      </div>
    </div>
  </header>
  <ul id="resultList">
    <li class="no-results">No results found</li>
  </ul>
</div>